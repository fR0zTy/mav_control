<?xml version="1.0"?>

<launch>
   
  <!-- Start Gazebo with wg world running in (max) realtime -->
  <arg name="world_name" default="$(find mav_control)/worlds/test_1.world" />
	<include file="$(find mav_control)/launch/world.launch">
	  <arg name="world_name" default="$(arg world_name)"/>
	</include>
   
  <!-- Spawn simulated quadrotor uav -->
	  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
	    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_with_laser_stereo_camera.gazebo.xacro"/> 

	  </include>
  <!-- Start rviz visualization with preset config -->
	  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find mav_control)/rviz_cfg/sim_config.rviz"/> 
   
</launch>
